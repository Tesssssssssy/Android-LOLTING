<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".board.BoardWriteActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:text="글쓰기 페이지"
                    android:fontFamily="@font/saeng"
                    android:textSize="50sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000000"/>

            <EditText
                android:id="@+id/Board_titleArea"
                android:layout_margin="20dp"
                android:fontFamily="@font/saeng"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:hint="제목을 입력해주세요"
                android:layout_height="60dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#000000"/>

            <EditText
                android:id="@+id/Board_contentArea"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:hint="내용을 입력해주세요"
                android:fontFamily="@font/saeng"
                android:textSize="30sp"
                android:background="@android:color/transparent"
                android:layout_height="60dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#000000"/>

            <ImageView
                android:id="@+id/Board_imageArea"
                android:src="@drawable/plusbtn"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/Board_writeBtn"
                android:text="입력"
                android:fontFamily="@font/saeng"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:layout_width="match_parent"
                android:background="@drawable/background_radius_purple"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

