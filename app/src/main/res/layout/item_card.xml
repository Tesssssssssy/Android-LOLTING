<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileImageArea"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/jalnan"
                android:text="닉네임 : "
                android:textColor="#050000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/jalnan"
                android:text="Name"
                android:textColor="#050000"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/itemFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/jalnan"
            android:text="Face"
            android:textColor="#050000"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/itemAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/jalnan"
            android:text="Age"
            android:textColor="#050000"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/itemCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/jalnan"
            android:text="City"
            android:textColor="#050000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/jalnan"
                android:text="롤닉네임 : "
                android:textColor="#050000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemLOLNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/jalnan"
                android:text="LOL nickname"
                android:textColor="#050000"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/jalnan"
            android:text="롤포지션 : "
            android:textColor="#050000"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/itemLOLPostion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/jalnan"
            android:text="LOL position"
            android:textColor="#050000"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

        <TextView
            android:id="@+id/itemLOLTier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/jalnan"
            android:text="LOL tier"
            android:textColor="#050000"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/left_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/mainColor"
            android:src="@drawable/no" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/mainColor"
            android:src="@drawable/tick" />


    </FrameLayout>


</androidx.cardview.widget.CardView>